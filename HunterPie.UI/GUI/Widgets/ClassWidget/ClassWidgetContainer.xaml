<widget:Widget
            x:Class="HunterPie.GUI.Widgets.ClassWidget.ClassWidgetContainer"
            xmlns:widget="clr-namespace:HunterPie.GUI"
            x:Name="ClassWidget"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Title="HunterPie - Class Helper" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Topmost="True" Closing="OnClosing"
            Style="{StaticResource OVERLAY_WIDGET_STYLE}">
    <Grid>
        <StackPanel x:Name="Container" HorizontalAlignment="Left" VerticalAlignment="Top">

        </StackPanel>
        <TextBlock Text="{Binding ElementName=ClassWidget, Path=DesignModeDetails}" Visibility="{Binding ElementName=ClassWidget, Path=DesignModeDetailsVisibility}" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource OVERLAY_DESIGN_MODE_DEBUG}"/>
    </Grid>
</widget:Widget>
