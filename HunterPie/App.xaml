<Application x:Class="HunterPie.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hunterPie="clr-namespace:HunterPie"
             StartupUri="Hunterpie.xaml" DispatcherUnhandledException="OnDispatcherUnhandledException" ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://siteoforigin:,,,/HunterPie.Resources/UI/Icons.xaml"/>
                <ResourceDictionary Source="/Resources/ScrollbarStyle.xaml"/>
                <ResourceDictionary Source="/Resources/MarkdownStyles.xaml"/>
                <ResourceDictionary Source="/Resources/DefaultTheme.xaml"/>
                <ResourceDictionary Source="/Resources/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <hunterPie:HunterPieXmlDataProvider x:Key="Localization" XPath="Strings/Client"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
